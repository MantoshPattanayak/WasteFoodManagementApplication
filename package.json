    "crypto-js": "^4.2.0",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "jsonwebtoken": "^9.0.2",
    "moment": "^2.30.1",
    "path": "^0.12.7",
    "pg": "^8.12.0",
    "sequelize": "^6.37.3"
  },
